<resources>

    <!-- Base application theme. -->
    <style name="Theme.PlanUp.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
    </style>

    <style name="LaunchTheme" parent="Theme.PlanUp.Base">
        <item name="android:windowBackground">@color/launch_background</item>
    </style>

    <!--Actionbar Stuff-->
    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_on_primary</item>
        <item name="android:textColorSecondary">@color/subtitle_on_primary</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--App view style customization-->
    <style name="ProgressStyleSmall">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Small</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/unselected_tab_on_primary</item>
    </style>

</resources>
